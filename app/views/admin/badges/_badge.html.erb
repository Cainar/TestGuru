<tr>
  <td class="align-middle"><%= image_tag(badge.file, width: '20%') %></td>
  <td class="align-middle">
    <%= content_tag :span, badge.name, class: 'badge-name', data: { badge_id: badge.id } %>
  </td>
  <td class="align-middle"><%= link_to t('common.show'), admin_badge_path(badge) %></td>
  <td class="align-middle">
    <%= link_to t('common.edit'), 
                edit_admin_badge_path(badge),
                data: { badge_id: badge.id, locale: I18n.locale },
                class: 'form-inline-link' %>
  </td>
  <td class="align-middle">
    <%= link_to t('common.delete'), 
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: t('common.sure') } %>
  </td>
</tr>
