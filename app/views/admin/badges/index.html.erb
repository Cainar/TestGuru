<h1><% t('.header') %></h1>

<p>
  <%= link_to t('.link'), new_admin_badge_path %>
</p>

<%= render 'shared/errors', resource: @badge %>

<% if @badges.present? %>
  <table class="table">
    <tr>
      <th><%= t('.file') %></th>
      <th class="sort-by-title pointer">
        <%= Badge.human_attribute_name("title") %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>        
      </th>
      <th colspan='3'><% t('common.actions') %></th>
    </tr>

    <%= render @badges %>
  </table>
<% end %>

<p>
  <%= link_to t('.gist_list'), admin_gists_path %>
</p>
