<h1>Create new question</h1>
 <form action="/tests/1/questions" method="post">
 	<%= hidden_field_tag :authenticity_token, form_authenticity_token, style: "display: none" %>

 	<p>
 		<label for="question-body">Body:</label>
 		<input type="text" name="question[body]" id="question-body">
 	</p><br>

 		<input type="text" name="question[test_id]" id="question-test_id" value="<%= params[:test_id] %>" type="hidden" style="display: none" >

 	<input type="submit" value="Create">
 </form>
