
<h1>Форма отправки сообщений</h1>
<p><%= notice %></p>
<p><%= alert %></p>
<%= form_with model: feedback, local: true, url: feedback_path do |form| %>
  <% if feedback.errors.any? %>
  <div id="error_explanation">
     <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this post from being saved:</h2>
     <ul>
        <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
     </ul>
  </div>
  <% end %> 
  <div>
     <%= label(:name, :name) %>
     <%= form.text_field :name, placeholder: "Name", class: 'form-control', value: @user.name, required: true %>
  </div>
  <div>
     <%= label(:email, :email) %>
     <%= form.email_field :email, placeholder: "Email Address", class: 'form-control', value: @user.email, required: true %>
  </div>
  <div>
     <%= label(:message, :message) %>
     <%= form.text_area :message, placeholder: "Message", class: 'form-control', required: true %>
  </div>
  <br>
  <%= recaptcha_tags %>
  <br>
  <%= form.submit :Send %>
<% end %>

